# Makefile.Solaris.i386
# GNU makefile for Solaris 

# Use Sun C compiler
CC = cc -I../include

# Archiving tools
AR = /usr/ccs/bin/ar
RANLIB = /usr/ccs/bin/ranlib

# NASM-compatible assembler. x86 doesn't use GNU as
NASM = nasm -I../include/SIMDx86/ -DELF=1 -DPLATFORM_IA32=1 -f elf 

# Libraries
CFLAGS = -xO3 -w

# Get corresponding platform- and architecture-specific source code files
include arch_x86.mk
include plat_posix.mk

# Get main rule set
include build.mk


