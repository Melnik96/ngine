# Makefile.Linux.i386
# GNU makefile for Linux

# Use GCC compiler
CC = gcc -I../include

# Archiving tools
AR = ar
RANLIB = ranlib

# Libraries
CFLAGS = -O2 -Wall -maltivec -mabi=altivec -frename-registers -fivopts

# Get corresponding platform- and architecture-specific source code files
include arch_ppc.mk
include plat_posix.mk

# Get main rule set
include build.mk


